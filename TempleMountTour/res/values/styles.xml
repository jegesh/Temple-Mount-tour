<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    <!--    <item name="android:windowBackground">@drawable/beit_mikdash_bg</item> --> 
    </style>
        <style name="hr">
       <item name = "android:layout_width">fill_parent</item>
	   <item name="android:layout_height">2dp</item>       
   	   <item name="android:background">#0a0a0a</item>
    </style>
    <style name="map_menu_bar" parent="@android:style/Holo.ButtonBar" >
        <item name="android:background">@drawable/gray_gradient_rect_bg</item>
    </style>
    <style name="minorHr">
       <item name = "android:layout_width">fill_parent</item>
	   <item name="android:layout_height">1dp</item>       
   	   <item name="android:background">#000000</item>
    </style>
    <style name="H1" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:textColor">#0000FF</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
 <!--   <item name="android:textAlignment">center</item> -->
        
        
    </style>
    

</resources>
