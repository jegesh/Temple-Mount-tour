<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tour_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.templemounttour.StationActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/tour_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tour_header"
         />
    <TextView
        android:id="@+id/tour_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
    <LinearLayout android:id="@+id/tour_pic_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>
    <TextView 
        android:id="@+id/tour_explanation"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <MediaController 
        android:id="@+id/tour_audio"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        ></MediaController>

</LinearLayout>
</ScrollView>